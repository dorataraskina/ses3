<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true" android:id="@+id/buttonSelected">
    <shape android:shape="rectangle">
        <corners android:radius="4dp"/>
        <stroke android:color="@color/button" android:width="1dp"/>
    </shape>
</item>
<item android:state_checked="false" android:id="@+id/buttonNotSelected">
    <shape android:shape="rectangle">
        <corners android:radius="4dp"/>
        <stroke android:color="@color/button_gray_stroke" android:width="1dp"/>
    </shape>
</item>
</selector>